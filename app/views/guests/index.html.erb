<div class="page-header">
  <h1>
    Guests
    <a href="/guests/new" class="btn btn-lg btn-success">New Guest</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Age</th>
        <th>Status</th>
        <th>Food</th>
        <th>Lastname</th>
        <th>Firstname</th>
        <th>Dietary</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>

      <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.user.email %></td>
        <td><%= guest.age %></td>
        <td><%= guest.status %></td>
        <td><%= guest.food %></td>
        <td><%= guest.lastname %></td>
        <td><%= guest.firstname %></td>
        <td><%= guest.dietary %></td>
        <td><%= guest.image %></td>
        <td>
          <a href="/guests/<%= guest.id %>" class="btn btn-primary">Show</a>
          <a href="/guests/<%= guest.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_guest/<%= guest.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @guests, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
