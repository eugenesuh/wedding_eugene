<div class="page-header">
  <h3>Accomodation #<%= @accomodation.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @accomodation.name %></dd>

      <dt>Category</dt>
      <dd><%= @accomodation.category %></dd>

      <dt>Zip</dt>
      <dd><%= @accomodation.zip %></dd>

      <dt>Body</dt>
      <dd><%= @accomodation.body %></dd>

      <dt>Code</dt>
      <dd><%= @accomodation.code %></dd>

      <dt>User</dt>
      <dd>
        <% if @accomodation.user.present? %>
          <a href="/users/<%= @accomodation.user_id %>">
            <%= @accomodation.user.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/accomodations" class="btn btn-primary">
        Back
      </a>
      <a href="/accomodations/<%= @accomodation.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_accomodation/<%= @accomodation.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
