<div class="page-header">
  <h3>Hcomment #<%= @hcomment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Body</dt>
      <dd><%= @hcomment.body %></dd>

      <dt>User</dt>
      <dd>
        <% if @hcomment.user.present? %>
          <a href="/users/<%= @hcomment.user_id %>">
            <%= @hcomment.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Hotel</dt>
      <dd>
        <% if @hcomment.hotel.present? %>
          <a href="/hotels/<%= @hcomment.hotel_id %>">
            <%= @hcomment.hotel.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/hcomments" class="btn btn-primary">
        Back
      </a>
      <a href="/hcomments/<%= @hcomment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_hcomment/<%= @hcomment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
