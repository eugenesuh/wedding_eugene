<div class="page-header">
  <h3>Scomment #<%= @scomment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @scomment.user.present? %>
          <a href="/users/<%= @scomment.user_id %>">
            <%= @scomment.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Song</dt>
      <dd>
        <% if @scomment.song.present? %>
          <a href="/songs/<%= @scomment.song_id %>">
            <%= @scomment.song.title %>
          </a>
        <% end %>
      </dd>

      <dt>Body</dt>
      <dd><%= @scomment.body %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/scomments" class="btn btn-primary">
        Back
      </a>
      <a href="/scomments/<%= @scomment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_scomment/<%= @scomment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
