<div class="page-header">
  <h1>
    Scomments
    <a href="/scomments/new" class="btn btn-lg btn-success">New Scomment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Song</th>
        <th>Body</th>
        <th>Actions</th>
      </tr>

      <% @scomments.each do |scomment| %>
      <tr>
        <td>
          <% if scomment.user.present? %>
            <a href="/users/<%= scomment.user.id %>">
              <%= scomment.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if scomment.song.present? %>
            <a href="/songs/<%= scomment.song.id %>">
              <%= scomment.song.title %>
            </a>
          <% end %>
        </td>
        <td><%= scomment.body %></td>
        <td>
          <a href="/scomments/<%= scomment.id %>" class="btn btn-primary">Show</a>
          <a href="/scomments/<%= scomment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_scomment/<%= scomment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @scomments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
