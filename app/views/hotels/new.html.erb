<!-- Validation failure messages -->
<% if @hotel.errors.any? %>
  <% @hotel.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Hotel</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_hotel" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @hotel.name %>">
      </div>

      <!-- Label and input for airbnb_ind -->
      <div class="form-group">
        <label for="airbnb_ind" class="control-label">
          Airbnb ind
        </label>

        <input type="text" id="airbnb_ind" name="airbnb_ind" placeholder="Airbnb ind" class="form-control" value="<%= @hotel.airbnb_ind %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @hotel.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for zip -->
      <div class="form-group">
        <label for="zip" class="control-label">
          Zip
        </label>

        <input type="text" id="zip" name="zip" placeholder="Zip" class="form-control" value="<%= @hotel.zip %>">
      </div>

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Body
        </label>

        <input type="text" id="body" name="body" placeholder="Body" class="form-control" value="<%= @hotel.body %>">
      </div>

      <button class="btn btn-success">
        Create Hotel
      </button>
      or
      <a href="/hotels">Cancel</a>
    </form>
  </div>
</div>
