<div class="page-header">
  <h3>Hotel #<%= @hotel.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @hotel.name %></dd>

      <dt>Airbnb ind</dt>
      <dd><%= @hotel.airbnb_ind %></dd>

      <dt>User</dt>
      <dd>
        <% if @hotel.user.present? %>
          <a href="/users/<%= @hotel.user_id %>">
            <%= @hotel.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Zip</dt>
      <dd><%= @hotel.zip %></dd>

      <dt>Body</dt>
      <dd><%= @hotel.body %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/hotels" class="btn btn-primary">
        Back
      </a>
      <a href="/hotels/<%= @hotel.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_hotel/<%= @hotel.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Hotel has many hcomments -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Hcomments
      </li>

      <% @hotel.hcomments.each do |hcomment| %>
        <li class="list-group-item">
          <a href="/hcomments/<%= hcomment.id %>">
            <%= hcomment.body %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/hcomments/<%= hcomment.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/hcomments/<%= hcomment.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_hcomment/<%= hcomment.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_hcomment" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Body
        </label>

        <input type="text" id="body" name="body" placeholder="Body" class="form-control" value="">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email), :class => "form-control") %>
      </div>

      <!-- Label and input for hotel_id -->
      <input type="hidden" name="hotel_id" value="<%= @hotel.id %>">

      <button class="btn btn-block btn-success">
        Create Hcomment
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
