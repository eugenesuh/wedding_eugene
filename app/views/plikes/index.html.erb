<div class="page-header">
  <h1>
    Plikes
    <a href="/plikes/new" class="btn btn-lg btn-success">New Plike</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Photo</th>
        <th>Actions</th>
      </tr>

      <% @plikes.each do |plike| %>
      <tr>
        <td>
          <% if plike.user.present? %>
            <a href="/users/<%= plike.user.id %>">
              <%= plike.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if plike.photo.present? %>
            <a href="/photos/<%= plike.photo.id %>">
              <%= plike.photo.caption %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/plikes/<%= plike.id %>" class="btn btn-primary">Show</a>
          <a href="/plikes/<%= plike.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_plike/<%= plike.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @plikes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
