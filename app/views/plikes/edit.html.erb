<!-- Validation failure messages -->
<% if @plike.errors.any? %>
  <% @plike.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Plike #<%= @plike.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_plike/<%= @plike.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @plike.user_id %>">
      </div>

      <!-- Label and input for photo_id -->
      <div class="form-group">
        <label for="photo_id" class="control-label">
          Photo
        </label>

        <input type="text" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value="<%= @plike.photo_id %>">
      </div>

      <button class="btn btn-warning">
        Update Plike
      </button>
      or
      <a href="/plikes/<%= @plike.id %>">Cancel</a>
    </form>
  </div>
</div>
