<div class="page-header">
  <h1>
    Alikes
    <a href="/alikes/new" class="btn btn-lg btn-success">New Alike</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Activity</th>
        <th>Actions</th>
      </tr>

      <% @alikes.each do |alike| %>
      <tr>
        <td>
          <% if alike.user.present? %>
            <a href="/users/<%= alike.user.id %>">
              <%= alike.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if alike.activity.present? %>
            <a href="/activities/<%= alike.activity.id %>">
              <%= alike.activity.title %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/alikes/<%= alike.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == alike.user %>
            <a href="/alikes/<%= alike.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_alike/<%= alike.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @alikes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
