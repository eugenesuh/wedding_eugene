<div class="page-header">
  <h3>Alike #<%= @alike.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @alike.user.present? %>
          <a href="/users/<%= @alike.user_id %>">
            <%= @alike.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Activity</dt>
      <dd>
        <% if @alike.activity.present? %>
          <a href="/activities/<%= @alike.activity_id %>">
            <%= @alike.activity.title %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/alikes" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @alike.user %>
        <a href="/alikes/<%= @alike.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_alike/<%= @alike.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
